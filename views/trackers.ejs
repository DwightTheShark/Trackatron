  <h3 class="font-bold leading-tight text-2xl mt-0 mb-2 text-gray-900">Create Facebook Tracker:</h3>
  <form action="/trackers/createFBTracker" method="POST">
      <input type="text" name="name" placeholder="Tracker Nickname"  data-bs-toggle="tooltip" data-bs-placement="top" title="Give your tracker a name that clearly identifies what it's being used for"/>
      <input type="text" name="fb_token" placeholder="Facebook Token"/>
      <input type="text" name="fb_pixel_id" placeholder="Facebook Pixel ID" />
      <input class="submit" type="submit" />
  </form>
  
</br>
  <h4 class="font-medium leading-tight text-2xl mt-0 mb-2 text-blue-600">Facebook Trackers</h3>
    
    <div class="overflow-x-auto">
        <table class="table w-full">
          <!-- head -->
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Tracking URL</th>
              <th>Facebook Pixel ID</th>
              <th> </th>
            </tr>
          </thead>
          <tbody>
            <% fbTrackers.forEach( el => { %>
            <tr class='trackerItem' data-id='<%=el._id%>'>
              <th> </th>
              <td><%= el.name %></td>
              <td>https://trackatron.com/trackers/fbtrack/<%= el._id %></td>
              <td><%= el.fb_pixel_id %></td>
              <td class="del del-fb">
                <button type="button" class="inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    <!-- Heroicon name: mini/link -->
                    <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                      </svg>
                    Delete
                  </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
